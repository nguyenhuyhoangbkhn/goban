<header class="navbar navbar-fixed-top navbar-inverse">
  <div style="padding:0px 15px;">
    <%= link_to t(:logo), hotels_index_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to t(:setting), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user.log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("user.login"), new_user_session_path %>
          </li>
          <li>
            <%= link_to t("user.sign_up"), new_user_registration_path %>
          </li>
        <% end %>
      </ul>
      <div class="navbar-form form-input-search navbar-right">
        <% @hotels = Hotel.all %>
        <% @search = @hotels.ransack params[:q] %>
        <%= search_form_for @search, url: searchs_path, method: :get do |f| %>
        <%= f.text_field :name_cont, placeholder: "Input hotel's name",
          class: "form-control" %>
      <% end %>
      </div>
    </nav>
  </div>
</header>
