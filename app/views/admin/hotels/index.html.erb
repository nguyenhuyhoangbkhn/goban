<%= render "admin/hotels/search_form" %>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="center"><%= t "user.name" %></th>
          <th class="center", colspan="3"><%= t "user.actions" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @hotels %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @hotels %>
    </div>
  </div>
</div>