<div class="row">
  <div class="w3-content w3-display-container row form-detail-img col-md-6">
    <% unless @hotel.images.nil? %>
      <% @hotel.images.each do |image| %>
        <div class="item">
          <%= image_tag image.picture,  class:"mySlides img-thumbnail"%>
        </div>
      <% end %>
    <% end %>
    <a class="w3-btn-floating w3-display-left a-left-1" onclick="plusDivs(-1)">&#10094;</a>
    <a class="w3-btn-floating w3-display-right a-right-1" onclick="plusDivs(1)">&#10095;</a>
  </div>
  <div class="col-md-6 content-detail">
      <p class="hotel-title-detail"><%= @hotel.name %></p>
      <p>
          <button type="button" class="btn btn-info btn-lg btn-rate" data-toggle="modal" data-target="#myModal">Rate hotel</button>
      </p>
      <!-- can chuyen no thanh dang sao -->
      <!-- <%= @hotel.average("hotel").nil? ? "0" : @hotel.average("hotel").avg %> -->
      <p style="display:flex;">Rate: <%= rating_for @hotel, "hotel", star: 5, disable_after_rate: true %></p>
      <p>Hotel is <%= @hotel.kind%> width <%= @hotel.phone_number%> rooms</p>
      <p><%= @hotel.address unless @hotel.address.nil? %></p>
      <p class="hotel-intro-detail"><%= @hotel.introduction%></p>
      <p> 
        <span>Contact us</span><br>
        by phone: <%= @hotel.phone_number%><br>
        by website: <%= @hotel.websitehotel%>
      </p>

  </div>

  <div class="form-comment">
    <div id="comment-form">
    	<%= render 'shared/comment_form' if user_signed_in? %>
    </div>
    <div class="row">
        <% if @hotel.comments.any? %>
          <ol class="hotel row">
          	<div id = 'comments'>      
    	        <%= render @comments %>
    	   	</div>
           </ol>
          <%= paginate @comments %>
        <% end %>
    </div>
  </div>
</div>






<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content" style="margin-top:120px !important;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Rate hotel</h4>
        </div>
        <div class="modal-body">
          <p><%= rating_for @hotel, "hotel", star: 5, disable_after_rate: false %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

<script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";
  }
  x[slideIndex-1].style.display = "block";
}
</script>